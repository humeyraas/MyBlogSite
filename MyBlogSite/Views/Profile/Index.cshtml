@model MyBlogSite.Models.ProfileViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil</title>

    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/profile.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">
</head>

<body>

    <div class="profile">
        <div class="profile-header">
            <div class="user">
                <div class="profile-picture">
                    <img src="@ViewBag.ProfileImagePath" alt="Profil" />
                </div>
                <div class="user-info">
                    <p class="username">@Model.User?.Username</p>
                    <p class="biography">@Model.User?.About</p>
                    <div class="links">
                        <div class="link">
                            <i class="fa-brands fa-instagram link-icon"></i>
                            <p class="link-label">Instagram Adresim</p>
                        </div>
                        <div class="link">
                            <i class="fa-solid fa-link"></i>
                            <p class="link-label">Websitem</p>
                        </div>
                    </div>
                    <a href="/User/Settings" class="edit-profile" style="text-decoration: none;">
                        Profili Düzenle
                    </a>

                </div>
            </div>

        </div>
        <div class="wrapper">

            <div class="tab-buttons full-width">
                <button class="active" onclick="showTab('own')">Gönderilerin</button>
                <button onclick="showTab('liked')">Beğenilerin</button>
                <button onclick="showTab('repost')">Repostların</button>
            </div>

            <div id="own" class="tab-content active">
                @foreach (var blog in Model.OwnPosts)
                {
                    <div class="profile-post">
                        @if (!string.IsNullOrEmpty(blog.ImageUrl))
                        {
                            <img src="@blog.ImageUrl" alt="@blog.Title" />
                        }

                        <div class="bottom">
                            <div>
                                <h1>
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id" class="post-title-link">
                                        @blog.Title
                                    </a>
                                </h1>

                                <p>@(blog.Content.Length > 100 ? blog.Content.Substring(0, 100) + "..." : blog.Content)</p>
                            </div>
                            <div class="card-footer">
                                <div class="options">
                                    <a asp-action="Edit" asp-controller="Blog" asp-route-id="@blog.Id" title="Düzenle">
                                        <i class="fas fa-pen-to-square"></i>
                                    </a>

                                    <form asp-action="Delete" asp-controller="Blog" asp-route-id="@blog.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu blogu silmek istediğine emin misin?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" title="Sil" style="background:none; border:none; color:red; cursor:pointer;">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>

                                    <a asp-action="Repost" asp-controller="Blog" asp-route-id="@blog.Id">
                                        <i class="fas fa-retweet" title="Repostla"></i>
                                    </a>
                                </div>
                                <div class="authorAndDate">
                                    <span>@blog.User?.Username</span>
                                    <span>@blog.CreatedAt.ToShortDateString()</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div id="liked" class="tab-content posts">
                @foreach (var blog in Model.LikedPosts)
                {
                    <div class="profile-post">
                        @if (!string.IsNullOrEmpty(blog.ImageUrl))
                        {
                            <img src="@blog.ImageUrl" alt="@blog.Title" />
                        }

                        <div class="bottom">
                            <div>
                                <h1>
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id" class="post-title-link">
                                        @blog.Title
                                    </a>
                                </h1>
                                <p>@(blog.Content.Length > 100 ? blog.Content.Substring(0, 100) + "..." : blog.Content)</p>
                            </div>

                            <div class="card-footer">
                                <div class="options">
                                    <button class="like-button liked" data-blog-id="@blog.Id" title="Beğenmekten vazgeç">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>
                                <div class="authorAndDate">
                                    <span>@blog.User?.Username</span>
                                    <span>@blog.CreatedAt.ToShortDateString()</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>



            <div id="repost" class="tab-content posts">
                @foreach (var blog in Model.RepostedPosts)
                {
                    <div class="profile-post">
                        @if (!string.IsNullOrEmpty(blog.ImageUrl))
                        {
                            <img src="@blog.ImageUrl" alt="@blog.Title" />
                        }

                        <div class="bottom">
                            <div>
                                <h1>
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id" class="post-title-link">
                                        @blog.Title
                                    </a>
                                </h1>
                                <p>@(blog.Content.Length > 100 ? blog.Content.Substring(0, 100) + "..." : blog.Content)</p>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="options">
                                <a asp-controller="Blog" asp-action="ToggleRepost" asp-route-id="@blog.Id" asp-route-tab="repost" title="Repost'u kaldır">
                                    <i class="fas fa-retweet"></i>
                                </a>
                            </div>
                            <div class="authorAndDate">
                                <span>@blog.User?.Username</span>
                                <span>@blog.CreatedAt.ToShortDateString()</span>
                            </div>
                        </div>
                    </div>
                }
            </div>



        </div>
    </div>

    <script src="~/js/search.js"></script>
    <script src="~/js/scroll.js"></script>
    <script src="~/js/menuToggle.js"></script>
    <script src="~/js/profile.js"></script>
</body>

</html>
