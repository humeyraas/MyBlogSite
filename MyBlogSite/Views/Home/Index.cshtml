@model List<MyBlogSite.Models.Blog>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Ana Sayfa</title>

    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/sidebar.css" />
</head>

<body>
    
    <header class="header target">
        <img src="~/img/background/home.jpg" alt="background">
        <h1>My Blog</h1>
        <h3>It's a Dream</h3>
    </header>

   
    <div class="home">
        <div class="wrapper">
            <div class="posts">
                @foreach (var blog in Model)
                {
                    <div class="post target" onclick="location.href='@Url.Action("Detail", "Blog", new { id = blog.Id })'" style="cursor:pointer;">
                        <h1>@blog.Title</h1>
                        <img src="@blog.ImageUrl" alt="@blog.Title" />
                        <p>
                            @if (!string.IsNullOrEmpty(blog.Content) && blog.Content.Length > 100)
                            {
                                @Html.Raw(blog.Content.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @Html.Raw(blog.Content)
                            }
                        </p>
                        <div class="authorAndDate">
                            <span>@blog.User?.Username</span>
                            <span>@blog.CreatedAt.ToShortDateString()</span>
                        </div>
                    </div>
                }
            </div>

            <div class="sidebar">
                <div class="popular-blogs">
                    <h3>Popüler Bloglar</h3>
                    <ul>
                        @foreach (var blog in ViewBag.PopularBlogs as List<MyBlogSite.Models.Blog>)
                        {
                            <li>
                                <a href="@Url.Action("Detail", "Blog", new { id = blog.Id })">
                                    @blog.Title
                                </a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>
    </div>

   
    <script src="~/js/search.js"></script>
    <script src="~/js/scroll.js"></script>
    <script src="~/js/menuToggle.js"></script>
</body>
</html>
